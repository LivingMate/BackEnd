{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "types": ["@prisma/client"],
    "target": "es2020",
    "module": "commonjs",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "pretty": true,
    "allowJs": true,
  },
  "resolveJsonModule": true,
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}